      <option value="three">3</option>
      <option value="four">4</option>
      <option value="five">5</option>
      <option value="six">6</option>
    </select>

    <div class="hidden" id="two-options">
      <% include ../partials/two-options %>
    </div>
    <div class="hidden" id="three-options">
      <% include ../partials/three-options %>
    </div>
    <div class="hidden" id="four-options">
      <% include ../partials/four-options %>
    </div>
    <div class="hidden" id="five-options">
      <% include ../partials/five-options %>
    </div>
    <div class="hidden" id="six-options">
      <% include ../partials/six-options %>
    </div>

    <link rel="stylesheet" href="/style.css">
    <script src="http://code.jquery.com/jquery-2.1.4.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/client.js"></script>
  </body>
</html>
